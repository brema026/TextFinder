<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.FinderController" styleClass="root-first-block">
    <Label styleClass="root-text" text="Keyword"/>
    <TextField styleClass="find-text" fx:id="finderText" prefHeight="40.0" prefWidth="720.0"/>
    <Button styleClass="root-button" fx:id="findButton"/>
    <Button styleClass="root-button" fx:id="fileButton" onAction="#handleFileButton" />
    <Button styleClass="root-button" fx:id="addFileButton"/>
    <ListView fx:id="libraryListView" prefHeight="200.0" prefWidth="200.0" />
    <Button styleClass="root-button" fx:id="deleteFileButton"/>
</HBox>
